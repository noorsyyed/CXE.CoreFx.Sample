    <PackageReference Include="Microsoft.PowerPlatform.Dataverse.Client" Version="1.2.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CXE.CoreFx\CXE.CoreFx.Generators\CXE.CoreFx.Generators.csproj" />
