  <Import Project="..\..\CXE.CoreFx\CXE.CoreFx\CXE.CoreFx.projitems" Label="Shared" />

  <Import Project="..\..\CXE.CoreFx\CXE.CoreFx.Plugin\CXE.CoreFx.Plugin.projitems" Label="Shared" />

  <Import Project="..\..\Common\CXE.Sample.Provider\CXE.Sample.Provider.projitems" Label="Shared" />

  <Import Project="$(PowerAppsTargetsPath)\Microsoft.PowerApps.VisualStudio.Plugin.targets" Condition="Exists('$(PowerAppsTargetsPath)\Microsoft.PowerApps.VisualStudio.Plugin.targets')" />
